pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                echo 'Compiling Java code...'
                sh 'javac helloworld.java'
            }
        }

        stage('Docker Build') {
            steps {
                echo 'Building Docker image...'
                sh 'docker build -t helloworld-app .'
            }
        }

        stage('Docker Run') {
            steps {
                echo 'Stopping existing container if it exists...'
                sh '''
                    if [ "$(docker ps -aq -f name=helloworld-container)" ]; then
                        docker rm -f helloworld-container
                    fi
                    docker run -d -p 8081:8081 --name helloworld-container helloworld-app
                '''
            }
        }
    }
}
